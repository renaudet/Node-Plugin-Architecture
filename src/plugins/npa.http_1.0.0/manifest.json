{
  "id": "npa.http",
  "name": "HTTP endpoint provider",
  "version": "1.0.0",
  "plugin": "plugin.js",
  "http": {
  	"port": 9080,
  	"secure": false,
  	"corsEnabled": true,
  	"supportedLocale": "en-US,en,fr-FR,fr",
  	"session": {
  		"enabled": true,
	    "name": "NPA",
	    "secret": "npa4node",
	    "expires": 900,
	    "checkperiod": 120
  	}
  },
  "requires": [
  	{"type": "plugin","id": "npa.logging","version": "1.0.0"},
  	{"type": "plugin","id": "npa.core","version": "1.0.0"}
  ],
  "extends": [
  	{
  		"point": "npa.log.provider",
  		"id": "npa.http.logger",
  		"dir": "http"
  	},
  	{
  		"point": "npa.core.service",
  		"id": "npa.http.service",
  		"service": "http"
  	}
  ],
  "provides": [
  	{"id": "npa.http.router"},
  	{"id": "npa.http.handler"},
  	{"id": "npa.http.static"},
  	{"id": "npa.http.home"}
  ]
}